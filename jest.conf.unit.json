  "preset": "ts-jest",
  "rootDir": "packages",
  "testEnvironment": "node",
  "testRegex": ".(test|spec)\\.(jsx?|tsx?)$",
  "reporters": [
    "default",
    [
      "jest-junit",
      {
        "outputDirectory": "reports/junit",
        "outputName": "js-unit-test-results.xml"
      }
    ]
  ]
}
